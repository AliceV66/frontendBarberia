---
import BookingButton from "./BookingButton.astro";
---

<section
  class="relative min-h-screen h-[100dvh] flex items-center justify-center overflow-hidden"
>
  <!-- Background Image/Video Placeholder -->
  <div class="absolute inset-0 z-0 w-full h-full">
    <div
      class="absolute inset-0 bg-gradient-to-b from-onyx/70 via-onyx/50 to-onyx/80 z-10 w-full h-full"
    >
    </div>
    <img
      src="/hero-bg-enhanced.png"
      alt="Barberia Maestro la Navaja"
      class="w-full h-full object-cover object-center opacity-80"
    />
  </div>

  <!-- Content -->
  <div class="relative z-20 text-center px-4 max-w-4xl mx-auto">
    <h1
      class="font-serif text-5xl md:text-7xl font-bold text-smoke mb-6 tracking-wide"
    >
      Maestro la <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-accent-dark via-steel to-accent-light"
        >Navaja</span
      >
    </h1>
    <p
      class="font-sans text-xl md:text-2xl text-silver mb-10 font-light max-w-2xl mx-auto"
    >
      Expertos en el cuidado personal
    </p>

    <div class="flex flex-col items-center gap-4">
      <BookingButton className="text-lg px-8 py-4" />
    </div>
  </div>
</section>
